{% extends 'userBase.html.twig' %}

{% block title %}
	{{ page.Page_Title }}
{% endblock %}

{% block content %}
	{% if page %}
		<header class="cms-title container-fluid mb-5">
			<div class="row">
				<div class="col-lg-8 col-md-10 mx-auto">
					<h1 class="text-dark display-4 font-weight-bold">
						{{ page.Page_Title }}
					</h1>
				</div>
			</div>
		</header>
		<div class="cms-content container mb-5">
			<div class="row">
				<div class="col-lg-8 col-md-10 mx-auto">
					<div class="cms-content">
						{{ page.Content|raw }}
					</div>
				</div>
			</div>
		</div>
	{% else %}
		<h5 class="alert alert-danger text-center m-5">Page not found</h5>
	{% endif %}
{% endblock %}
