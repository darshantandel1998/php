{% extends "base.html.twig" %}

{% block title %}Admin Users index{% endblock %}

{% block body %}
<div class="mt-2">
	<h1 class="text-center">Users</h1>
	<div class="{{ SESSION.error.class }}" role="alert">{{ SESSION.error.msg }}</div>
	<a href={{ static('admin/users/create-form') }} class="btn btn-primary mb-3">Create</a>
	{% if users %}
	<div class="d-flex justify-content-center">
		<table class="table table-bordered">
			<thead>
				<tr>
					{% for key, value in users[0]|slice(1) %}
					<th>{{ key }}</th>
					{% endfor %}
					<th colspan="2">Action</th>
				</tr>
			</thead>
			<tbody>
				{% for user in users %}
				<tr>
					{% for value in user|slice(1) %}
					<td>{{ value }}</td>
					{% endfor %}
					<td>
						<form class="d-inline" action={{ static('admin/users/update-form') }} method="POST">
							<input type="hidden" name="update" value={{ user.UserId }}>
							<button class="btn btn-primary" type="submit">Update</button>
						</form>
						<form class="d-inline" action={{ static('admin/users/delete') }} method="POST">
							<input type="hidden" name="delete" value={{ user.UserId }}>
							<button class="btn btn-danger" type="submit">Delete</button>
						</form>
					</td>
				</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
	{% else %}
	<h5 class="d-flex justify-content-center">Users not found</h5>
	{% endif %}
</div>
{% endblock %}