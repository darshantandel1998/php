{% extends "base.html.twig" %}

{% block title %}Admin | Products{% endblock %}

{% block content %}
<div class="mx-5 m-3">
    <div class="d-flex justify-content-between mx-5 mb-2">
        <h1>Products</h1>
        <a class="btn btn-primary h-100 my-auto" href={{ url('admin/products/add') }}>Add Products</a>
    </div>
    <div class="{{ SESSION.error.class }}" role="alert">{{ SESSION.error.msg }}</div>
    {% if products %}
    <div class="d-flex justify-content-center">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>SKU</th>
                    <th>Url Key</th>
                    <th>Image</th>
                    <th>Status</th>
                    <th>Description</th>
                    <th>Short Description</th>
                    <th>Price</th>
                    <th>Stock</th>
                    <th>Created At</th>
                    <th>Updated At</th>
                    <th colspan="2">Action</th>
                </tr>
            </thead>
            <tbody>
                {% for product in products %}
                <tr>
                    <td>{{ product.Product_Name }}</td>
                    <td>{{ product.SKU }}</td>
                    <td>{{ product.Url_Key }}</td>
                    <td class="text-center"><img class="img-thumbnail" src={{ url("images/product/" ~ product.Image) }}>
                    </td>
                    <td>{{ product.Status }}</td>
                    <td>{{ product.Description }}</td>
                    <td>{{ product.Short_Description }}</td>
                    <td>{{ product.Price }}</td>
                    <td>{{ product.Stock }}</td>
                    <td>{{ product.Created_At }}</td>
                    <td>{{ product.Updated_At }}</td>
                    <td>
                        <a class="btn btn-primary" href={{ url('admin/products/edit/') ~ categories.Id }}>Update</a>
                        <form class="d-inline" action={{ url('admin/products/delete') }} method="POST">
                            <input type="hidden" name="delete" value={{ product.Id }}>
                            <button class="btn btn-danger" type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    {% else %}
    <h5 class="alert alert-danger text-center mt-5">Categories not found</h5>
    {% endif %}
</div>
{% endblock %}