{% extends "adminBase.html.twig" %}

{% block title %}
	Admin | CMS Page
	{{ type }}
{% endblock %}

{% block content %}
	<div class="mx-5 m-3">
		<div class="text-center mx-5 mb-2">
			<h1>{{ type }}
				CMS Page</h1>
		</div>
		<form id="cmsForm" class="form-horizontal" action="{{ url('admin/cms/pages/' ~ type|lower ~ 'Data') }}" method="POST">
			<input type="hidden" name="Id" value="{{ page.Id }}">
			<div class="form-group">
				<label class="col-md-4 control-label" for="Page_Title">Page Title</label>
				<div class="col-md-4">
					<input id="Page_Title" name="Page_Title" type="text" value="{{ page.Page_Title }}" class="form-control input-md" required="">
				</div>
			</div>
			<div class="form-group">
				<label class="col-md-4 control-label" for="Status">Status</label>
				<div class="col-md-4">
					<label class="radio-inline" for="Status-0">
						<input type="radio" name="Status" id="Status-0" value="1" {% if page.Status %} {% if page.Status == "1" %} checked="checked" {% endif %} {% else %} checked="checked" {% endif %}>
						Unblock
					</label>
					<label class="radio-inline" for="Status-1">
						<input type="radio" name="Status" id="Status-1" value="0" {% if page.Status == "0" %} checked="checked" {% endif %}>
						Block
					</label>
				</div>
			</div>
			<div class="form-group">
				<label class="col-md-4 control-label" for="Content">Content</label>
				<div class="col-md-4">
					<textarea class="form-control" id="Content" name="Content" required="">{{ page.Content }}</textarea>
				</div>
			</div>
			<div class="form-group">
				<label class="col-md-4 control-label" for=""></label>
				<div class="col-md-8">
					<button id="" name="" type="submit" class="btn btn-primary">{{ type }}
						CMS Page</button>
					<a href="{{ url('admin/cms/pages') }}" class="btn btn-primary">Back</a>
				</div>
			</div>
		</form>
	</div>
{% endblock %}
