{% extends "userBase.html.twig" %}

{% block title %}
	{{ category.Category_Name }}
	Category
{% endblock %}

{% block content %}
	{% if category %}
		<div class="container-fluid bg-light p-2">
			<div class="container">
				<div>
					{% if category.Parent_Category_Name %}
						<a href="{{ url('category/view/' ~ category.Parent_Category_Url_Key) }}">{{ category.Parent_Category_Name }}</a>&nbsp;/&nbsp;
					{% endif %}
					<a href="{{ url('category/view/' ~ category.Url_Key) }}">{{ category.Category_Name }}</a>
				</div>
			</div>
		</div>
		<div class="container my-5">
			<div class="row">
				<div class="col-md-5">
					<img class="img-fluid rounded img-thumbnail w-100 d-block m-auto" src={{ url("images/categories/" ~ category.Image) }} alt="{{ category.Category_Name }} Image">
				</div>
				<div class="col-md-7">
					<h1 class="mb-2">{{ category.Category_Name }}</h1>
					<h4>Description</h4>
					<p>{{ category.Description }}</p>
				</div>
			</div>
		</div>
		{% if childCategories %}
			<div class="container">
				<div class="col-md-12">
					<hr>
					<h1>Categories</h1>
					<div class="row d-flex">
						{% for childCategory in childCategories %}
							<div class="card card-block d-flex m-2 category-block">
								<div class="card-body text-center">
									<a href="{{ url('category/view/' ~ childCategory.Url_Key) }}"><img src="{{ url('images/categories/' ~ childCategory.Image) }}" alt="" class="img-fluid"></a>
								</div>
								<div class="card-footer">
									<a href="{{ url('category/view/' ~ childCategory.Url_Key) }}">
										<h3 class="h5">{{ childCategory.Category_Name }}</h3>
									</a>
								</div>
							</div>
						{% endfor %}
					</div>
				</div>
			</div>
		{% endif %}
		{% if products %}
			<div class="container">
				<div class="col-md-12">
					<hr>
					<h1>Products</h1>
					<div class="row d-flex">
						{% for product in products %}
							<div class="card card-block d-flex m-2 product-block">
								<div class="card-body d-flex justify-content-center align-items-center">
									<a href="{{ url('product/view/' ~ product.Url_Key) }}">
										<img src="{{ url('images/products/' ~ product.Image) }}" alt="{{ product.Product_Name }} Image" class="img-fluid">
									</a>
								</div>
								<div class="card-footer">
									<a href="{{ url('product/view/' ~ product.Url_Key) }}">
										<h3 class="h5">{{ product.Product_Name }}</h3>
									</a>
									<p class="price">
										Rs.
										{{ product.Price }}
									</p>
								</div>
							</div>


						{% endfor %}
					</div>
				</div>
			</div>
		{% endif %}
	{% else %}
		<h5 class="alert alert-danger text-center m-5">Category not found</h5>
	{% endif %}
{% endblock %}
